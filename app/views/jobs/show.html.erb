<main class="main-container">
  <section class="main-left"></section>
  <section class="main-side">
    <section class="main-side-container">
      <section class="main-side-top"></section>
      <nav class="nav">
        <%= link_to "Companies", companies_path %>
        <%= link_to "Jobs", jobs_path %>
        <%= link_to "Categories", categories_path %>
        <%= link_to "Dashboard", dashboard_path %>
      </nav>
      <section class="main-side-bottom">
        Title: <%= @job.title %>
        <br>

        Description: <%= @job.description %>
        <br>

        Level of Interest: <%= @job.level_of_interest %>
        <br>

        City: <%= @job.city %>
        <br>

        Company: <%= link_to @job.company.name, company_path(@job.company) %>
        <br>

        Comments:<br>
        <ul>
        <% @job.comments.reverse.each do |comment| %>
          <li><%= comment.body %></li>
        <% end %>
        </ul>
        <br>

        Need to create a new comment?<br>
        <%= render partial: "comment" %>
      </section>
    </section>
  </section>
</main>
