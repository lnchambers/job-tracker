<main class="main-container">
  <section class="main-left"></section>
  <section class="main-side">
    <section class="main-side-container">
      <section class="main-side-top"></section>
      <section class="main-side-bottom">
        All Jobs for <strong><%= @company.name %></strong>

        <br>
        Contacts:<br>
        <% @company.contacts.each do |contact| %>
          <ul>
          <li><%= contact.name %></li>
          <li><%= contact.position %></li>
          <li><%= contact.email %></li>
        <% end %>
        </ul>

        <ul>
          <% @jobs.each do |job| %>
          <li class=job_<%= job.id %>>
            <%= link_to job.title, job_path(job) %>:
            <%= link_to "Edit", edit_job_path(job) %>
            <%= link_to "Delete", job_path(job), method: "delete" %>
          </li>
          <% end %>
        </ul>
      </section>
    </section>
  </section>
</main>
