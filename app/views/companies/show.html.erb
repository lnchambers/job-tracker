<main class="main-container">
  <section class="main-left"></section>
  <section class="main-side">
    <section class="main-side-container">
      <section class="main-side-top"></section>
      <nav class="nav">
        <%= link_to "Companies", companies_path %>
        <%= link_to "Jobs", jobs_path %>
        <%= link_to "Categories", categories_path %>
        <%= link_to "Dashboard", dashboard_path %>
        <%= link_to "Tags", tags_path %>
      </nav>
      <section class="main-side-bottom">
        All Jobs for <strong><%= @company.name %></strong>

        <br>
        Contacts:<br>
        <% @company.contacts.each do |contact| %>
          <ul>
            <li>Name: <%= contact.name %></li>
            <li>Position: <%= contact.position %></li>
            <li>Email: <%= contact.email %></li>
          </ul>
        <% end %><br>

        Not finding who you are looking for? Create a new contact.<br>
        <%= render partial: "contact" %>

        <ul>
          <% @company.jobs.each do |job| %>
          <li class=job_<%= job.id %>>
            <%= link_to job.title, job_path(job) %>:
            <%= link_to "Edit", edit_job_path(job) %>
            <%= link_to "Delete", job_path(job), method: "delete" %>
          </li>
          <% end %>
        </ul>
      </section>
    </section>
  </section>
</main>
